<article>
  <% if notice %>
    <aside id="notice"><%= notice %> </aside>
  <%end %>
  <h2> <%= t('.title') %> </h2>
  <table>
    <%= render cart.line_items %>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_currency(cart.total_price)%> </td>
      </tr>
    </tfoot>
  </table>    
  <div class="actions">
  <% is_new_order_path = current_page?(new_order_path) %>
  <%= button_to <%= t('.empty') %>, cart, method: :delete, 
    data: {confirm: 'Are you sure?' , remote: true} %>
  <%= button_to <%= t('.checkout') %>, new_order_path(locale: I18n.locale), {method: :get, 
    disabled: is_new_order_path, class: "checkout" } %>
  </div>
</article>